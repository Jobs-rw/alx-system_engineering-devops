#!/usr/bin/env bash

# Update the package list to ensure we have the latest information about available packages
sudo apt update

# Install Nginx if it's not already installed
if ! command -v nginx &> /dev/null; then
    sudo apt install -y nginx
fi

# Create a new Nginx configuration file for redirection
sudo tee /etc/nginx/sites-available/redirect_me <<EOF
server {
    listen 80;
    server_name your_domain.com; # Replace with your domain or server IP

    location /redirect_me {
        return 301 https://example.com/new_page; # Replace with the new destination URL
    }

    # Other server configuration (if any)
}
EOF

# Create a symbolic link to enable the configuration
sudo ln -s /etc/nginx/sites-available/redirect_me /etc/nginx/sites-enabled/

# Test Nginx configuration
sudo nginx -t

# Reload Nginx to apply changes
sudo service nginx reload
